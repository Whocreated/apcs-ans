#include<bits/stdc++.h>
using namespace std;
main(){
    int n,k,i,j;
    while(cin>>n){
        int s[n];
        for(i=0;i<n;i++){
            cin>>k; int a[k];
            for(j=0;j<k;j++) cin>>a[j];
            sort(a,a+k);
            s[i]=a[0];
        }
        sort(s,s+n);
        cout<<s[n-1]<<endl;
    }
}
